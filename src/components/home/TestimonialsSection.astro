</section>

<style>
  /* Animation for tweets */
  @keyframes scrollLeft {
    0% { transform: translateX(0); }
    100% { transform: translateX(calc(-80rem)); }
  }

  @keyframes scrollRight {
    0% { transform: translateX(calc(-80rem)); }
    100% { transform: translateX(0); }
  }

  .animate-scroll-left {
    animation: scrollLeft 40s linear infinite;
  }

  .animate-scroll-right {
    animation: scrollRight 40s linear infinite;
  }

  /* Syntax highlighting */
  .language-typescript {
    color: #e6e6e6;
  }

  .language-typescript .token.keyword {
    color: #c586c0;
  }

  .language-typescript .token.string {
    color: #ce9178;
  }

  .language-typescript .token.comment {
    color: #6a9955;
  }

  .language-typescript .token.function {
    color: #dcdcaa;
  }

  .language-typescript .token.class-name {
    color: #4ec9b0;
  }

  .language-typescript .token.decorator {
    color: #569cd6;
  }

  .language-typescript .token.punctuation {
    color: #d4d4d4;
  }

  /* Code window styling */
  .code-window {
    transition: transform 0.2s ease;
  }

  .code-window:hover {
    transform: translateY(-5px);
  }

  /* Make the tweets lift on hover */
  .tweet-card {
    transition: all 0.3s ease;
  }
</style>